{
  "compilerOptions": {
    "rootDir": "src",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ESNext",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "declaration": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2018", "esnext.asynciterable"]
  },
  "exclude": ["node_modules"]
}
